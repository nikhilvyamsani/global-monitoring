      "fieldConfig": {
        "defaults": {
          "unit": "none",
          "min": 0,
          "decimals": 0,
          "color": { "mode": "palette-classic" }
        }
      },
      "gridPos": { "h": 8, "w": 6, "x": 18, "y": 16 }
    },
    {
      "id": 9,
      "title": "System Resources Overview",
      "type": "table",
      "targets": [
        {
          "expr": "avg by (client_id)(host_cpu_usage)",
          "legendFormat": "",
          "refId": "A",
          "format": "table",
          "instant": true
        },
        {
          "expr": "avg by (client_id)(host_memory_usage)",
          "legendFormat": "",
          "refId": "B",
          "format": "table",
          "instant": true
        },
        {
          "expr": "avg by (client_id)(host_disk_usage)",
          "legendFormat": "",
