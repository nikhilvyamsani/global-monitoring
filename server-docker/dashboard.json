      ],
      "fieldConfig": {
        "defaults": {
          "unit": "none",
          "min": 0,
          "decimals": 0,
          "color": { "mode": "palette-classic" }
        }
      },
      "gridPos": { "h": 8, "w": 6, "x": 6, "y": 16 }
    },
    {
      "id": 10,
      "title": "Site Statistics",
      "type": "timeseries",
      "targets": [
        {
          "expr": "sum by (client_id)(site_statics)",
          "legendFormat": "{{client_id}}",
