        }
      ],
      "transformations": [
        {
          "id": "merge",
          "options": {
            "byField": "client_id"
          }
        },
        {
          "id": "organize",
          "options": {
            "excludeByName": {
              "Time": true,
              "__name__": true,
              "instance": true,
              "job": true,
              "hostname": true
            },
            "renameByName": {
              "client_id": "Client",
              "Value #A": "CPU %",
              "Value #B": "Memory %",
              "Value #C": "Disk %",
              "Value #D": "DB Connections",
              "Value #E": "Videos Processed",
              "Value #F": "Error Videos",
              "Value #G": "Site Statistics",
              "Value #H": "Videos Not Processed"
            }
          }
        },
        {
          "id": "sortBy",
          "options": {
            "fields": {},
            "sort": [
              {
                "field": "Client",
                "desc": false
              }
            ]
          }
        }
      ],
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 32 },
      "options": {
        "showHeader": true,
        "footer": {
          "show": false,
          "reducer": ["sum"],
          "countRows": false,
          "fields": "",
          "enablePagination": true
        }
      },
      "fieldConfig": {
        "defaults": {
          "decimals": 2,
          "unit": "percent"
        },
        "overrides": [
