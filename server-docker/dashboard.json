          "format": "table",
          "instant": true
        },
        {
          "expr": "sum by (client_id)(videos_processed)",
          "legendFormat": "",
          "refId": "E",
          "format": "table",
          "instant": true
        },
        {
          "expr": "sum by (client_id)(videos_error)",
          "legendFormat": "",
