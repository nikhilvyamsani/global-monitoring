{
  "id": null,
  "title": "Client Monitoring Dashboard",
  "tags": ["monitoring", "clients", "system"],
  "timezone": "browser",
  "editable": true,
  "panels": [
    {
      "id": 1,
      "title": "Active Clients",
      "type": "stat",
      "targets": [
        {
          "expr": "count(count by (client_id)(host_cpu_usage))",
          "legendFormat": "Active Clients",
          "refId": "A",
          "instant": true
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "steps": [
              { "color": "red", "value": 0 },
              { "color": "yellow", "value": 1 },
              { "color": "green", "value": 2 }
            ]
          },
          "unit": "none"
        }
      },
      "gridPos": { "h": 6, "w": 6, "x": 0, "y": 0 }
    },
    {
      "id": 2,
      "title": "CPU Usage",
      "type": "timeseries",
      "targets": [
        {
          "expr": "avg by (client_id)(host_cpu_usage)",
          "legendFormat": "{{client_id}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "decimals": 1
        }
      },
      "gridPos": { "h": 8, "w": 12, "x": 6, "y": 0 }
    },
    {
      "id": 3,
      "title": "Memory Usage",
      "type": "timeseries",
      "targets": [
        {
          "expr": "avg by (client_id)(host_memory_usage)",
          "legendFormat": "{{client_id}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "decimals": 1
        }
      },
      "gridPos": { "h": 8, "w": 6, "x": 18, "y": 0 }
    },
    {
      "id": 5,
      "title": "Disk Usage",
      "type": "timeseries",
      "targets": [
        {
          "expr": "avg by (client_id)(host_disk_usage)",
          "legendFormat": "{{client_id}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "decimals": 1
        }
      },
      "gridPos": { "h": 8, "w": 12, "x": 6, "y": 8 }
    },
    {
      "id": 6,
      "title": "MySQL Connections",
      "type": "timeseries",
      "targets": [
        {
          "expr": "sum by (client_id)(mysql_active_connections)",
          "legendFormat": "{{client_id}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "min": 0,
          "decimals": 0
        }
      },
      "gridPos": { "h": 8, "w": 6, "x": 18, "y": 8 }
    },
    {
      "id": 7,
      "title": "Videos Processed",
      "type": "timeseries",
      "targets": [
        {
          "expr": "sum by (client_id)(videos_processed)",
          "legendFormat": "{{client_id}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "none",
          "min": 0,
          "decimals": 0
        }
      },
      "gridPos": { "h": 8, "w": 6, "x": 0, "y": 8 }
    },
    {
      "id": 8,
      "title": "Error Videos",
      "type": "timeseries",
      "targets": [
        {
          "expr": "sum by (client_id)(videos_error)",
          "legendFormat": "{{client_id}}",
          "refId": "A"
